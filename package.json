{
	"name": "surge-preview",
	"version": "1.6.0",
	"private": true,
	"description": "Preview website in surge.sh for every pull request",
	"main": "lib/main.js",
	"scripts": {
		"build": "tsc",
		"build-preview": "node ./utils/gen-preview.js",
		"format": "prettier --write **/*.ts",
		"format-check": "prettier --check **/*.ts",
		"lint": "eslint src/**/*.ts",
		"package": "ncc build --source-map",
		"test": "jest --passWithNoTests",
		"pretty-quick": "pretty-quick",
		"all": "yarn build && yarn format && yarn lint && yarn package && yarn test",
		"prepare": "husky install"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/giioohbernini/pr-preview.git"
	},
	"keywords": [
		"actions",
		"surge",
		"preview",
		"pull-requests",
		"deploy"
	],
	"author": "giioohbernini",
	"license": "MIT",
	"dependencies": {
		"@actions/core": "^1.2.6",
		"@actions/exec": "^1.0.4",
		"@actions/github": "^5.0.0",
		"@juzi/nodejs-traceroute": "^3.0.3",
		"ping": "^0.4.4",
		"vercel": "28.2.2",
		"xmlhttprequest-ts": "^1.0.1",
		"yarn": "^1.22.21"
	},
	"devDependencies": {
		"@types/jest": "^27.0.1",
		"@types/node": "^16.6.2",
		"@types/ping": "^0.4.4",
		"@types/validator": "^13.11.8",
		"@typescript-eslint/parser": "^4.15.2",
		"@vercel/ncc": "^0.36.1",
		"eslint": "^7.14.0",
		"eslint-plugin-github": "^4.1.1",
		"eslint-plugin-jest": "^24.1.5",
		"husky": "^7.0.1",
		"jest": "^27.0.6",
		"jest-circus": "^27.0.6",
		"prettier": "^2.2.1",
		"pretty-quick": "^3.0.0",
		"ts-jest": "^27.0.5",
		"typescript": "^4.1.2"
	}
}
